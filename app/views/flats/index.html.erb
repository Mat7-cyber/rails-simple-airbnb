<div class="main-container">

	<div class="main-infos">
			<h1>All availables flats</h1>
			<%= link_to "Add a flat", new_flat_path, class:"btn btn-primary" %>
	</div>

	<div class="container-flat">

	<% @flats.each do |flat| %>

		<div class="card-flat">
			<%= image_tag flat.pictures, class:"flat-image" %>
			<div class="card-text">
				<h3><%= flat.name %></h3>
				<h4><%= flat.address %></h4>
				<p><%= flat.description %></p>
				<div class="infos-number">
					<h4><i class="fa-solid fa-dollar-sign"></i>: <%= flat.price_per_night %> dollars</h4>
					<h4><i class="fa-solid fa-person"></i>: <%= flat.number_of_guests %> persons</h4>
				</div>
			</div>

		<%= link_to "More infos", flat_path(flat), class:"btn btn-primary" %>
		<%= link_to "Edit the flat", edit_flat_path(flat), class:"btn btn-warning"%>
		<%= link_to "Remove flat", flat_path(flat),
					data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:"btn btn-danger" %>
		</div>

	<% end %>
	</div>

</div>
